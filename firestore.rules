rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isTrainer() {
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return userData.role == 'trainer';
    }

    function isTrainerOf(userId) {
      let userData = get(/databases/$(database)/documents/users/$(userId)).data;
      return userData.trainerId == request.auth.uid
          || (userData.allowedTrainers != null && userData.allowedTrainers.hasAny([request.auth.token.email]));
    }

    function isTrainerOfClient(clientId) {
      let clientData = get(/databases/$(database)/documents/users/$(clientId)).data;
      return clientData.trainerId == request.auth.uid ||
             (clientData.allowedTrainers != null && clientData.allowedTrainers.hasAny([request.auth.token.email]));
    }
    
    // Allow public access to connection_test for verifying connectivity
    match /connection_test/{document=**} {
      allow read, write: if true;
    }

    // Users collection - trainers can read their clients' profiles
    match /users/{userId} {
      allow read: if isSignedIn() && (
        isOwner(userId) || 
        isTrainerOf(userId) ||
        get(/databases/$(database)/documents/users/$(userId)).data.role == 'trainer'
      );
      allow write: if isSignedIn() && isOwner(userId);
    }

    // Workouts collection - trainers can read their clients' workouts and their assignments
    match /workouts/{workoutId} {
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isTrainerOf(resource.data.userId) ||
        resource.data.assignedBy == request.auth.uid
      );
      allow create: if isSignedIn() && (
        request.resource.data.userId == request.auth.uid ||
        isTrainerOf(request.resource.data.userId)
      );
      allow update, delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isTrainerOf(resource.data.userId)
      );
    }

    // Hikes collection - trainers can read their clients' hikes and their assignments
    match /hikes/{hikeId} {
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isTrainerOf(resource.data.userId) ||
        resource.data.assignedBy == request.auth.uid
      );
      allow create: if isSignedIn() && (
        request.resource.data.userId == request.auth.uid ||
        isTrainerOf(request.resource.data.userId)
      );
      allow update, delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isTrainerOf(resource.data.userId)
      );
    }

    // Nutrition collection - trainers can read their clients' nutrition logs and their assignments
    match /nutrition/{nutritionId} {
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isTrainerOf(resource.data.userId) ||
        resource.data.assignedBy == request.auth.uid
      );
      allow create: if isSignedIn() && (
        request.resource.data.userId == request.auth.uid ||
        isTrainerOf(request.resource.data.userId)
      );
      allow update, delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isTrainerOf(resource.data.userId)
      );
    }

    // Rest days collection - trainers can read their clients' rest days and their assignments
    match /rest_days/{restDayId} {
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isTrainerOf(resource.data.userId) ||
        resource.data.assignedBy == request.auth.uid
      );
      allow create: if isSignedIn() && (
        request.resource.data.userId == request.auth.uid ||
        isTrainerOf(request.resource.data.userId)
      );
      allow update, delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isTrainerOf(resource.data.userId)
      );
    }

    // Messages collection - only participants can read/write
    match /messages/{messageId} {
      allow read: if isSignedIn() && (
        request.auth.uid in resource.data.participants
      );
      allow create: if isSignedIn() && (
        request.auth.uid in request.resource.data.participants
      );
      // Optional: Allow delete if sender, but our plan handles expiry via filtering/TTL
      allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
    }

    // Default rule for other collections (allow authenticated users)
    match /{document=**} {
       allow read, write: if isSignedIn();
    }
  }
}
