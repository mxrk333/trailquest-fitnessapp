rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isTrainerOf(userId) {
      let userData = get(/databases/$(database)/documents/users/$(userId)).data;
      return userData.trainerId == request.auth.uid
          || userData.allowedTrainers.hasAny([request.auth.uid]);
    }
    
    // Allow public access to connection_test for verifying connectivity
    match /connection_test/{document=**} {
      allow read, write: if true;
    }

    // Users collection - trainers can read their clients' profiles
    match /users/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || isTrainerOf(userId));
      allow write: if isSignedIn() && isOwner(userId);
    }

    // Workouts collection - trainers can read their clients' workouts
    match /workouts/{workoutId} {
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isTrainerOf(resource.data.userId)
      );
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Hikes collection - trainers can read their clients' hikes
    match /hikes/{hikeId} {
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isTrainerOf(resource.data.userId)
      );
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Default rule for other collections (allow authenticated users)
    match /{document=**} {
       allow read, write: if isSignedIn();
    }
  }
}
